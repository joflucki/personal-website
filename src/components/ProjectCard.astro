---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import Tag from "./Tag.astro";

type Props = { id: string } & CollectionEntry<"projects">["data"];

const { id, title, description, locale, pubDate, heroImage, tags, links } =
    Astro.props;
---

<a href={getRelativeLocaleUrl(locale, `projects/${id.split("/").at(-1)}`)}>
    <div
        class="project-card"
        style={`--hero-image-url: url(${heroImage?.src})`}
    >
        <h2 class="title">{title}</h2>
        <div class="description">{description}</div>
        <div class="tags">
            {tags.map((tag) => <Tag {tag} />)}
        </div>
        <div class="pub-date"><FormattedDate date={pubDate} /></div>
    </div>
</a>

<style>
    a {
        text-decoration: none;
        color: var(--white);
        display: block;
        height: 100%;
    }
    .project-card {
        border: 1px solid var(--gray-dark);
        border-radius: 8px;
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1);
        cursor: pointer;
        display: flex;
        flex-direction: column;
        align-items: start;
        justify-content: start;
        padding: 3em;
        box-sizing: border-box;
        text-align: left;
        gap: 1em;
        height: 100%;
        position: relative;
        overflow: hidden;
    }
    .project-card:hover {
        border-color: var(--accent);
        scale: 101%;
    }
    .project-card::before {
        content: "";
        position: absolute;
        inset: 0;
        background-image: var(--hero-image-url);
        background-size: cover;
        background-position: center;
        filter: brightness(0.1);
        transform-origin: center;
        z-index: -1;
    }
    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5em;
        translate: -0.2em 0;
    }
    .pub-date {
        color: var(--gray-light);
        font-style: italic;
    }
</style>
