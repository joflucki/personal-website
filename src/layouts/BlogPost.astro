---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { toBCP47, useTranslations } from "../i18n/utils";
import type { MarkdownHeading } from "astro";
import Tag from "../components/Tag.astro";
import profilePicture from "../assets/91982622-bw.png";

type Props = CollectionEntry<"posts">["data"] & {
	headings: MarkdownHeading[];
};

const { _, slug } = Astro.params;

const { title, description, locale, pubDate, updatedDate, tags, headings } =
	Astro.props;

const t = useTranslations(locale);
---

<html lang={toBCP47(locale)}>
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				flex-direction: column;
				display: flex;
				margin: auto;
				padding: 5em 0;
				width: 70%;
				gap: 1em;
			}
			.table-of-contents {
				height: min-content;
				display: flex;
				flex-direction: column;
				align-items: end;
				text-align: end;
				border-right: 1px solid var(--accent);
				padding-right: 1em;
				position: sticky;
				top: 5em;
				min-width: 20%;
				line-height: 1.2;
				gap: 0.75em;
			}
			.table-of-contents a {
				color: var(--white);
				text-decoration-color: transparent;
				transition: text-decoration-color 0.15s linear;
			}
			.table-of-contents a:hover {
				text-decoration-color: var(--white);
			}
			.content {
				display: flex;
				gap: 1em;
			}
			.prose {
				width: 100%;
			}
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				translate: -5px 0;
			}
			hr {
				width: 100%;
				border: 1px solid var(--gray-dark);
			}
			.author {
				display: flex;
				align-items: center;
				gap: 0.5em;
			}
			.author img {
				border-radius: 20px;
			}
			.date {
				margin-top: 1em;
			}
			@media (max-width: 720px) {
				.table-of-contents {
					display: none;
				}
				main {
					width: 90%;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<div class="title">
				<h1>{title}</h1>
				<div class="author">
					<Image
						src={profilePicture}
						alt="A pixelated portrait of the author"
						height="24"
						width="24"
					/>
					<div>{t("global.written-by")} Jonas Fl√ºckiger</div>
				</div>
				<div class="date">
					<div>
						{t("global.published-on")}
						<FormattedDate date={pubDate} />
					</div>
					{
						updatedDate && (
							<div class="last-updated-on">
								{t("global.last-updated-on")}
								<FormattedDate date={updatedDate} />
							</div>
						)
					}
				</div>
			</div>
			<div class="tags">
				{tags.map((tag) => <Tag {tag} />)}
			</div>
			<hr />
			<div class="content">
				<div class="table-of-contents">
					{
						headings
							.filter((heading) => heading.depth < 3)
							.map((heading) => (
								<a href={`#${heading.slug}`}>{heading.text}</a>
							))
					}
				</div>
				<div class="prose">
					<slot />
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
