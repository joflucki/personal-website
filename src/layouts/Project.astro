---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import { toBCP47 } from "../i18n/utils";
import type { MarkdownHeading } from "astro";
import Tag from "../components/Tag.astro";

type Props = CollectionEntry<"projects">["data"] & {
	headings: MarkdownHeading[];
};

const { _, slug } = Astro.params;

const {
	title,
	description,
	locale,
	heroImage,
	pubDate,
	tags,
	links,
	headings,
} = Astro.props;
---

<html lang={toBCP47(locale)}>
	<head>
		<BaseHead title={title} description={description} />
		<style>
			main {
				flex-direction: column;
				display: flex;
				margin: auto;
				padding: 5em 0;
				width: 70%;
				gap: 1em;
			}
			main h1 {
				margin: 0;
			}
			main div:first-child img {
				aspect-ratio: 32 / 9;
				width: 100%;
				object-fit: cover;
				object-position: center;
			}
			main div:last-child {
				display: flex;
				gap: 3em;
			}
			.table-of-contents {
				height: min-content;
				display: flex;
				flex-direction: column;
				align-items: end;
				text-align: end;
				border-right: 1px solid var(--accent);
				padding-right: 1em;
				position: sticky;
				top: 5em;
				min-width: 20%;
				line-height: 1.2;
				gap: 0.75em;
			}
			.table-of-contents a {
				color: var(--white);
				text-decoration-color: transparent;
				transition: text-decoration-color 0.15s linear;
			}
			.table-of-contents a:hover {
				text-decoration-color: var(--white);
			}
			.content {
				display: flex;
				flex-direction: column;
			}
			.prose {
				display: flex;
				flex-direction: column;
			}
			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				translate: -5px 0;
			}
			hr {
				width: 100%;
				border: 1px solid var(--gray-dark);
			}
			@media (max-width: 720px) {
				.table-of-contents {
					display: none;
				}
				main {
					translate: none;
					width: 90%;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<div class="hero-image-container">
				<img src={heroImage?.src ?? ""} alt="test" />
			</div>
			<div class="title">
				<h1>{title}</h1>
				<div class="date">
					<FormattedDate date={pubDate} />
				</div>
			</div>
			<div class="tags">
				{tags.map((tag) => <Tag {tag} />)}
			</div>
			<hr />
			<div>
				<div class="table-of-contents">
					{
						headings
							.filter((heading) => heading.depth < 3)
							.map((heading) => (
								<a href={`#${heading.slug}`}>{heading.text}</a>
							))
					}
				</div>
				<div class="content">
					<div class="prose">
						<slot />
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
